<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Results"
                                             android:id="@+id/relativeLayout">

    <TextView
            android:text="A"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textView"
            tools:layout_conversion_wrapWidth="210"
            tools:layout_conversion_wrapHeight="105"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:autoSizeTextType="uniform"/>

    <TextView
            android:text="B"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textView2"
            tools:layout_conversion_wrapWidth="210"
            tools:layout_conversion_wrapHeight="105"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="10dp"
            app:autoSizeTextType="uniform"/>

    <TextView
            android:text="C"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textView3"
            tools:layout_conversion_wrapWidth="210"
            tools:layout_conversion_wrapHeight="105"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="10dp"
            app:autoSizeTextType="uniform"/>

    <TextView
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/buttonA"
            tools:layout_conversion_wrapWidth="21"
            tools:layout_conversion_wrapHeight="50"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:autoSizeTextType="uniform"/>

    <TextView
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/buttonB"
            tools:layout_conversion_wrapWidth="21"
            tools:layout_conversion_wrapHeight="50"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonA"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:autoSizeTextType="uniform"/>

    <TextView
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/buttonC"
            tools:layout_conversion_wrapWidth="21"
            tools:layout_conversion_wrapHeight="50"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonB"
            app:autoSizeTextType="uniform"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/universe"
            android:layout_marginStart="25dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_conversion_wrapWidth="263"
            tools:layout_conversion_wrapHeight="131"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/sun"
            android:id="@+id/imageView2"
            tools:layout_conversion_wrapWidth="263"
            tools:layout_conversion_wrapHeight="131"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/star"
            android:id="@+id/imageView3"
            tools:layout_conversion_wrapWidth="263"
            tools:layout_conversion_wrapHeight="131"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"/>

</android.support.constraint.ConstraintLayout>