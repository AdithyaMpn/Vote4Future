<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Vote"
                                             android:id="@+id/relativeLayout2">

    <TextView
            android:text="A"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textView"
            tools:layout_conversion_wrapWidth="210"
            tools:layout_conversion_wrapHeight="105"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="uniform"/>

    <TextView
            android:text="B"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textView2"
            tools:layout_conversion_wrapWidth="210"
            tools:layout_conversion_wrapHeight="105"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="uniform"/>

    <TextView
            android:text="C"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/textView3"
            tools:layout_conversion_wrapWidth="210"
            tools:layout_conversion_wrapHeight="105"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="uniform"/>

    <Button
            android:text="Vote"
            android:onClick="acount"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button3"
            tools:layout_conversion_wrapWidth="231"
            tools:layout_conversion_wrapHeight="126"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            />

    <Button
            android:text="Vote"
            android:onClick="bcount"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button4"
            tools:layout_conversion_wrapWidth="231"
            tools:layout_conversion_wrapHeight="126"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            />

    <Button
            android:text="Vote"
            android:onClick="ccount"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/button5"
            tools:layout_conversion_wrapWidth="231"
            tools:layout_conversion_wrapHeight="126"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            />

    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/universe"
            android:id="@+id/imageView"
            tools:layout_conversion_wrapWidth="263"
            tools:layout_conversion_wrapHeight="131"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/sun"
            android:id="@+id/imageView2"
            tools:layout_conversion_wrapWidth="263"
            tools:layout_conversion_wrapHeight="131"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/star"
            android:id="@+id/imageView3"
            tools:layout_conversion_wrapWidth="263"
            tools:layout_conversion_wrapHeight="131"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            />
</android.support.constraint.ConstraintLayout>